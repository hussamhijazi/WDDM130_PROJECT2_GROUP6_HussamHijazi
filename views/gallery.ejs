<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/twstyles.css">
    <link rel="stylesheet" href="/css/main.css">
    <title><%= title %></title>
</head>
<body class="bg-gray-100">

  <%- include('partials/header') %>

  <!-- Gallery Section -->
  <section class="gallery">
    <div class="gallery-header">
        <h1><%= header %></h1>
        <p><%= message %></p>
    </div>
    <div class="gallery-grid">
        <div class="gallery-item">
            <img src="/img/project1/project1-1.png" alt="Gallery Image 1">
        </div>
        <div class="gallery-item">
            <img src="/img/project1/project1-2.png" alt="Gallery Image 2">
        </div>
        <div class="gallery-item">
            <img src="/img/project1/project1-3.png" alt="Gallery Image 3">
        </div>
        <div class="gallery-item">
            <img src="/img/project1/project1-4.png" alt="Gallery Image 4">
        </div>
        <div class="gallery-item">
            <img src="/img/project1/project1-5.png" alt="Gallery Image 5">
        </div>
        <div class="gallery-item">
            <img src="/img/project1/project1-6.png" alt="Gallery Image 6">
        </div>
        <div class="gallery-item">
            <img src="/img/project2/project2-1.png" alt="Gallery Image 7">
        </div>
        <div class="gallery-item">
            <img src="/img/project2/project2-2.png" alt="Gallery Image 8">
        </div>
        <div class="gallery-item">
            <img src="/img/project2/project2-3.png" alt="Gallery Image 9">
        </div>
        <div class="gallery-item">
            <img src="/img/project3/project3-1.png" alt="Gallery Image 10">
        </div>
        <div class="gallery-item">
            <img src="/img/project3/project3-2.png" alt="Gallery Image 11">
        </div>
        <div class="gallery-item">
            <img src="/img/project3/project3-3.png" alt="Gallery Image 12">
        </div>
        <div class="gallery-item">
            <img src="/img/project3/project3-4.png" alt="Gallery Image 13">
        </div>
        <div class="gallery-item">
            <img src="/img/project4.png" alt="Gallery Image 14">
        </div>
        <div class="gallery-item">
            <img src="/img/project5.png" alt="Gallery Image 15">
        </div>
        <div class="gallery-item">
            <img src="/img/project6.png" alt="Gallery Image 16">
        </div>
        <div class="gallery-item">
            <img src="/img/project7.png" alt="Gallery Image 17">
        </div>
        <div class="gallery-item">
            <img src="/img/project8.png" alt="Gallery Image 18">
        </div>
        <div class="gallery-item">
            <img src="/img/project9.png" alt="Gallery Image 19">
        </div>
        <div class="gallery-item">
            <img src="/img/project10.png" alt="Gallery Image 20">
        </div>
    </div>

<!-- Display Gallery Images -->
    <div class="row g-4">
        <% images.forEach(image => { %>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="<%= image.imageUrl %>" class="card-img-top" alt="<%= image.altText %>">
                <div class="card-body">
                    <p class="card-text"><%= image.altText %></p>
                </div>
                <div class="card-footer text-center">
                    <!-- Update Image Form -->
                    <form action="/gallery/update/<%= image.id %>" method="POST" class="mb-2">
                        <input type="text" name="imageUrl" value="<%= image.imageUrl %>" class="form-control mb-2" required>
                        <input type="text" name="altText" value="<%= image.altText %>" class="form-control mb-2" required>
                        <button type="submit" class="btn btn-warning btn-sm">Update</button>
                    </form>
                    <!-- Delete Image Form -->
                    <form action="/gallery/delete/<%= image.id %>" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <!-- Add New Image -->
    <div class="d-flex justify-content-center align-items-center mt-5">
        <div class="w-50">
            <h2 class="text-center mb-4">Add a New Image</h2>
            <form action="/gallery" method="POST" class="p-4 border rounded bg-white shadow-sm">
                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Image URL or Path</label>
                    <input type="text" id="imageUrl" name="imageUrl" class="form-control" placeholder="Enter image URL or local path" required>
                </div>
                <div class="mb-3">
                    <label for="altText" class="form-label">Alt Text</label>
                    <input type="text" id="altText" name="altText" class="form-control" placeholder="Enter image alt text" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Add Image</button>
                </div>
            </form>
        </div>
    </div>

  </section>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
